<!DOCTYPE html>
<html>
  <head>
    <title><%=  full_title(yield(:title))  %></title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>
  </head>
  <body>
    <%= render 'layouts/header' %> <%# render is a rails helper, looks for file in app/views/layouts/_shim.html.erb and insert results into the view %>
      <div class="container">      <%# leading underscores indicate partials %>
        <%= yield %>
        <%= render 'layouts/footer' %>
      </div>
  </body>
</html>
