<% provide(:title, @user.name) %>
<div class = "row" >
    <aside class = "col-md-4" >
        <section class = "user_info" >
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>
            </h1>
        </section>
        
        <sectiom class="stats">
            <%= render 'shared/stats' %>
        </sectiom>
        
    </aside>
    <div class="col-md-8">
        
        <%= render 'follow_form' if logged_in? %>
        
        <% if @user.microposts.any? %>
            <h3><%= "You have #{pluralize(@user.microposts.count, 'post')}."  %> </h3>
            <ol class="microposts">
                <%= render @microposts %>
            </ol>
            <%= will_paginate @microposts %> <!-- Must pass explicit @microposts since we are in the Users controller -->
        <% end %>
    </div>
</div>
